@model lampbae_final_project.Models.RegisterViewModel
@{
                /**/

                ViewBag.Title = "Lampbae";
}
<body background="/Content/Blue_Light.jpg" style="background-size:cover;background-attachment:fixed"">
    <div align="center">
        <h2 style="color:white" align="center">@ViewBag.Title</h2>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 style="color:white;" align="center">Sign up for your free Lampbae account</h4>
            <p style="color:white; margin-left: 550px; margin-right:550px;" align="center">Use Lampbae and all of its features for free!</p>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group" style="color:white;">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>

            <div class="form-group" style="color:white;">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>

            <div class="form-group" style="color:white;">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })

                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>

            <div class="form-group">

                    <input type="submit" class="btn btn-default" value="Create Account" />
                </div>

        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
</body>