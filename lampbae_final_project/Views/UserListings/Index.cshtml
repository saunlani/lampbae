@model IEnumerable<lampbae_final_project.Models.Listing>

@{
    ViewBag.Title = "Lamps I'm Listing";
}

<h2 style="color:white; margin-left: 550px; margin-right:550px;text-align:center">Lamps I'm Listing</h2>

<body background="/Content/Blue_Light.jpg" style="background-size:cover;background-attachment:fixed">
    <div>
        <form action="/Home/NewLamp">
            <input type="submit" value="List A New Lamp" style="background-color:white" /><br />
        </form>
    </div>

    <table class="table">
        <tr>
            <th style = "width:20%;color:white;background-color:darkslateblue">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th style = "width:20%;color:white;background-color:darkslateblue">
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th style = "width:20%;color:white;background-color:darkslateblue">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th style = "width:20%;color:white;background-color:darkslateblue">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th style = "width:20%;color:white;background-color:darkslateblue">Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style = "color:aquamarine;">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td style = "color:aquamarine;">
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td style = "color:aquamarine;">
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td style = "color:aquamarine;">
                    <img src="~/Content/@item.Image" height="80" width="80" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</body>