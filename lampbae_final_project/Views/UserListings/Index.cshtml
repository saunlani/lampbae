@model IEnumerable<lampbae_final_project.Models.Listing>

@{
    ViewBag.Title = "Lamps I'm Listing";
}

<h2>Lamps I'm Listing</h2>

<body background="/Content/Images/lampbaeback.png" style="background-size:cover;">
    <div>
        <form action="/Home/NewLamp">
            <input type="submit" value="List A New Lamp" style="background-color:goldenrod" /><br />
        </form>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="~/Content/@item.Image" height="80" width="80" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</body>